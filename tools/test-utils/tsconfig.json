{
  "compilerOptions": {
    "strict": true,
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["node"],
    "jsx": "react-jsx",
    "incremental": true,
    "isolatedModules": true,
    "tsBuildInfoFile": "./.tsbuildinfo"
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
